


<%= bootstrap_form_with scope: :user,url: user_path(current_user),method: :patch , id: "user_form", local: true do |form| %>
  <div class="container">
    <div class="page-header">
      <h1><p>
        Update Profile: <%= @user.email %>
      </p></h1>
    </div>
    <%= form.text_field :name, placeholder: 'Enter Name', label: 'Name', required: true %>
    <%= form.text_field :university, placeholder: 'University', label: 'University', required: true %>
    <%= form.text_field :slack, placeholder: 'Enter Slack Url', label: 'Slack', required: true %>
    <%= form.text_field :github, placeholder: 'Enter Github Url', label: 'Github'  ,required: true %>
    <%= form.text_field :fb, placeholder: 'Enter FB Url', label: 'Facebook'  %>
    <%= form.text_field :twitter, placeholder: 'Enter Twitter Url', label: 'Twitter'  %>
    <%= form.text_field :linkedin, placeholder: 'Enter Linkdein Url', label: 'Linkedin',required: true %>
    <%= form.file_field :avatar, placeholder: '--------------------------------------------------------- ', label: 'Upload your Profile Image' ,required: true%>

    <%= form.submit 'Update Profile',class: "btn btn-success" %>
  </div>
<% end %>