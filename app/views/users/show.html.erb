
<!-- Add icon library -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="card">
  <%= image_tag  @user.avatar, alt: "Profile Picture", style: "width:100%" %>
  <h1><%= @user.name%></h1>
  <p class="title"><%= @user.designation %></p>
  <p><%= @user.university %></p>
  <a href="<%= @user.slack %>"
  class="abc"><i class="fa fa-slack"></i></a>
  <a href="<%= @user.github %>"class="abc"><i class="fa fa-github"></i></a>
  <a href="<%= @user.fb %>"class="abc"><i class="fa fa-facebook"></i></a>
  <a href="<%= @user.twitter %>"class="abc"><i class="fa fa-twitter"></i></a>
  <a href="<%= @user.linkedin %>"class="abc"><i class="fa fa-linkedin"></i></a>
  <p><button>Contact</button></p>
</div>