<%if current_user.role == 'admin' %>

<%= form_with scope: :job,url: jobs_path, local: true do |form| %>

<div class="container">
  <div class="page-header">
    <h1><p>
      Create Job
    </p></h1>
  </div>
    <div class="panel panel-success">
      <div class="form-group panel-heading">
        <label for="exampleInputEmail1">Company Name</label>
        <input type="text" class="form-control" name="job[company_name]" id="job_company_name" aria-describedby="emailHelp" placeholder="Enter Company Name" required autofocus>
        <small id="emailHelp" class="form-text text-muted">Name Should be atleast of Length 4.</small>
      </div>
      <div class="form-group panel-body">
        <label for="exampleInputEmail1">Title</label>
        <input type="text" class="form-control" name="job[title]" id="job_title" aria-describedby="commentHelp" placeholder="Enter Job Title" required>
      </div>
      <div class="form-group panel-heading">
        <label for="exampleInputEmail1">Description</label>
        <input type="text" class="form-control" name="job[description]" id="job_description" aria-describedby="emailHelp" placeholder="Enter Description" required>
      </div>
      <div class="form-group panel-body">
        <label for="exampleInputEmail1">Experience Required</label>
        <input type="text" class="form-control" name="job[experience]" id="job_experience" aria-describedby="commentHelp" placeholder="Enter Experience" required>
        <small id="commentHelp" class="form-text text-muted"></small>
      </div>
    </div>
    <p>
      <%= form.submit 'Create Job',class: "btn btn-success" %>
    </p>
</div>
<% end %>

<% end %>